<div style="width: 100%;">
  <div class="sign_in">


    <div style="width: 100%;">
      <div class="align-center devise-error">
          <%= devise_error_messages! %>
      </div>
    </div>


	

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

	  <h4>Forgot your password?</h4>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	  </div>

	  <div class="waves-effect waves-light btn">
	    <%= f.submit "Send me reset password instructions" %>
	  </div>
	<% end %>

  </div>
</div>


<footer class="page-footer" id="footer-custom">
  <div class="footer-copyright">
    <div class="container">
      <div style="width: 100%;">
      <div style="left: 0;">
      	<%= link_to "Back", :back, class: 'waves-effect waves-light btn'  %>
      	<%= link_to "Log in", new_session_path(resource_name), class: 'waves-effect waves-light btn'   %>
      </div>
  </div>
    </div>
  </div>
</footer> 