<div style="width: 100%;">
  <div class="align-center">
      <h4>Clientes</h4>
  </div>
</div>


<div style="width: 100%;">
  <div class="block-page">

    <p id="notice"><%= notice %></p>

    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cpf</th>
          <th>Email</th>
          <th>Endereco</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome %></td>
            <td><%= cliente.cpf %></td>
            <td><%= cliente.email %></td>
            <td><%= cliente.endereco %></td>
            <td><%= link_to 'Show', cliente %></td>
            <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
            <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Cliente', new_cliente_path, class: 'waves-effect waves-light btn' %>
  </div>
</div>