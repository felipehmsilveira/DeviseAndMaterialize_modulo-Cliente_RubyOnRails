<div style="width: 100%;">
  <div class="align-center">
      <h4>Clientes</h4>
  </div>
</div>


<div style="width: 100%;">
  <div class="block-page">

    <p id="notice"><%= notice %></p>

    <table>
      <thead>
        <tr>
          <th>NOME</th>
          <th>CPF</th>
          <th>EMAIL</th>
          <th>ENDEREÃ‡O</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome %></td>
            <td><%= cliente.cpf %></td>
            <td><%= cliente.email %></td>
